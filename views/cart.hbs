<h2>Cart</h2>


<div id="cart">
{{#if books.length}}
<table>
        <thead>
          <tr>
              <th>Title</th>
              <th>Price</th>
              <th>Count</th>
          </tr>
        </thead>
        <tbody>
{{#each books}}
          <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{count}}</td>
            <td>
              <i class="material-icons red-text js-remove" data-id="{{id}}">delete</i>
            </td>
          </tr>
      {{/each}}
        </tbody>
      </table>
      <div>
        <p class="amount">Price: {{ price }}</p>
      </div>
{{else}}
<p>Cart is empty</p>
{{/if}}
</div>


      